{
  "name": "demo/todo-slim",
  "description": "Simple ToDo list demo app using Slim 4, PDO (MySQL), sessions, and basic auth.",
  "type": "project",
  "require": {
    "php": ">=8.4",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^7.0",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-session": "*",
    "ext-redis": "*",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S 0.0.0.0:8080 -t app/public"
  }
}
